{
  "name": "darknode-command-center",
  "homepage": "https://republicprotocol.github.io/darknode-command-center",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.10",
    "@fortawesome/free-brands-svg-icons": "^5.6.1",
    "@fortawesome/free-solid-svg-icons": "^5.6.1",
    "@fortawesome/free-regular-svg-icons": "^5.6.1",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "@renex/renex": "^0.3.2",
    "@sentry/browser": "^4.4.1",
    "@sentry/core": "^4.4.1",
    "@types/bs58": "^3.0.30",
    "@types/react-redux": "^6.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/underscore": "^1.8.9",
    "@types/web3": "^1.0.14",
    "autoprefixer": "^9.4.2",
    "axios": "^0.18.0",
    "bignumber.js": "^8.0.1",
    "bs58": "^4.0.1",
    "history": "^4.7.2",
    "immutable": "^4.0.0-rc.12",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.8",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.0.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "typesafe-actions": "^2.0.4",
    "web3": "^1.0.0-beta.37"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.14",
    "@types/react": "^16.7.16",
    "@types/react-dom": "^16.0.11",
    "gh-pages": "^2.0.1",
    "react-scripts-ts": "^3.1.0",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "scripts": {
    "sass:build": "node-sass --include-path scss src/index.scss | postcss -u autoprefixer -b 'last 2 versions' > tmp.css && mv tmp.css src/index.css",
    "sass:watch": "npm run sass:build && nodemon -e scss --exec 'npm run sass:build'",
    "ts:lint": "tslint --project ./",
    "ts:watch": "PORT=7369 HTTPS=true react-scripts-ts start",
    "test": "react-scripts-ts test --env=jsdom",
    "start": "npm-run-all -p sass:watch ts:watch",
    "build": "npm run sass:build && react-scripts-ts build",
    "eject": "react-scripts-ts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "jest": {
    "moduleNameMapper": {
      "@Root/(.*)": "<rootDir>/src/$1",
      "@Library/(.*)": "<rootDir>/src/lib/$1",
      "@Components/(.*)": "<rootDir>/src/components/$1",
      "@Actions/(.*)": "<rootDir>/src/actions/$1",
      "@Reducers/(.*)": "<rootDir>/src/reducers/$1",
      "@Store/(.*)": "<rootDir>/src/store/$1"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
